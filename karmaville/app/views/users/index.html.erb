<h1>KarmaVille's Most Famous</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Karma</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
    <%= render 'user_row', :user => user %>
  <% end %>
</table>

<div class="pagination">
  <ul>
    <li><%= link_to "Prev", users_path(page: current_page - 1) %></li>
    <% (current_page).upto(4 + current_page) do |num| %>
      <li><%= link_to num, users_path(page: num) %></li>
    <% end %>
    <li><%= link_to "Next", users_path(page: current_page + 1) %></li>
  </ul>
</div>
